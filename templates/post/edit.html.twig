{% extends 'base.html.twig' %}

{% block title %}Edit post{% endblock %}

{% block body %}
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="h3 mb-1">Edit post</h1>
      <div class="orbit-muted">Update your article.</div>
    </div>
  </div>

  <div class="card orbit-card p-4 p-md-5 mb-4">
    {% include 'post/_form.html.twig' with { form: form, button_label: 'Save changes' } %}
  </div>

  <div class="card orbit-card p-4">
    <h2 class="h5 mb-3">Danger zone</h2>
    <div class="orbit-muted mb-3">This action cannot be undone.</div>
    {% include 'post/_delete_form.html.twig' %}
  </div>
{% endblock %}