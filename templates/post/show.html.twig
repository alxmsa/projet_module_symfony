{% extends 'base.html.twig' %}

{% block title %}Post details{% endblock %}

{% block body %}
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="h3 mb-1">Post details</h1>
      <div class="orbit-muted">Preview and manage this article.</div>
    </div>
    <div class="d-flex gap-2">
      <a class="btn btn-outline-light" href="{{ path('app_post_index') }}">Back</a>
      <a class="btn btn-primary" href="{{ path('app_post_edit', {id: post.id}) }}">Edit</a>
    </div>
  </div>

  <div class="card orbit-card overflow-hidden mb-4">
    {% if post.picture %}
      <img src="{{ post.picture }}" alt="{{ post.title }}" style="height: 280px; object-fit: cover; width: 100%;">
    {% endif %}
    <div class="p-4 p-md-5">
      <h2 class="h4 mb-2">{{ post.title }}</h2>
      <div class="orbit-meta mb-3">
        {% if post.category %}{{ post.category.name }}{% else %}—{% endif %}
        {% if post.publishedAt %} · {{ post.publishedAt|date('M d, Y H:i') }}{% endif %}
      </div>
      <div class="orbit-text">
        {{ post.content|nl2br }}
      </div>
    </div>
  </div>

  <div class="card orbit-card p-4">
    {% include 'post/_delete_form.html.twig' %}
  </div>
{% endblock %}