<div class="card h-100 orbit-card">
    {% if post.picture %}
        <img src="{{ post.picture }}" class="card-img-top" alt="{{ post.title }}">
    {% endif %}

    <div class="card-body">
        <div class="small text-muted mb-2">
            {{ post.publishedAt ? post.publishedAt|date('M d, Y') : '' }}
            {% if post.category %} · {{ post.category.name }}{% endif %}
        </div>

        <h5 class="card-title">{{ post.title }}</h5>

        <p class="card-text orbit-excerpt">
            {{ post.content|striptags|slice(0, 140) ~ (post.content|length > 140 ? '…' : '') }}
        </p>
    </div>

    <div class="card-footer bg-transparent border-0">
        <a class="btn btn-primary w-100" href="{{ path('article_show', {id: post.id}) }}">
            Read more
        </a>
    </div>
</div>